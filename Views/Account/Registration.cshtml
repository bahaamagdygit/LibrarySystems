@using Library.Dtos.Account
@model RegistrationDTO
@{
    ViewData["Title"] = "Registration";
}
<link href="~/css/login.css" rel="stylesheet" />



<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="author" content="Yinka Enoch Adedokun">
	<title>Login Page</title>
</head>
<body>
	<!-- Main Content -->
	<div class="container-fluid">
		<div class="row main-content bg-success text-center">
			<div class="col-md-4 text-center company__info">
				<span class="company__logo"><h2><span class="fa fa-android"></span></h2></span>
				<h4 class="company_title">Registration</h4>
			</div>
			<div class="col-md-8 col-xs-12 col-sm-12 login_form ">
				<div class="container-fluid">
					<div class="row">
						<h2>Registration</h2>
					</div>
					<div class="row">
						<form asp-action="Registration" method="post" class="form-group">
							<div class="row">
								<input type="text" asp-for="UserName" name="username" class="form__input" placeholder="Username">
							</div>
							<div class="row">
								<input type="text" asp-for="Email" name="Email" class="form__input" placeholder="Email">
							</div>
							<div class="row">
								<input type="text" asp-for="PhoneNumber" name="PhoneNumber" class="form__input" placeholder="PhoneNumber">
							</div>
							<div class="row">
								<!-- <span class="fa fa-lock"></span> -->
								<input type="password" name="password" asp-for="Password" class="form__input" placeholder="Password">
							</div>
						
							<div class="row">
								<input type="submit" value="Submit" class="btn">
							</div>
						</form>
					</div>
					<div class="row">
						<p>Don't have an account? <a href="#">Login</a></p>
					</div>
				</div>
			</div>
		</div>
	</div>
	
</body>







@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}